{
  "manifest_version": 3,
  "name": "Job Application Autofill",
  "version": "1.0",
  "description": "Automatically fills common job application fields with one click.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Autofill Job Form"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}